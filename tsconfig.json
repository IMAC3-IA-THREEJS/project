{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "forceConsistentCasingInFileNames": false,
    "jsx": "react",
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@shared/*": [
        "src/app/Shared/*"
      ],
      "@services/*": [
        "src/app/Shared/services/*"
      ],
      "@utils/*": [
        "src/app/Shared/utils/*"
      ],
      "@world/*": [
        "src/app/World/*"
      ],
      "@objmodels/*": [
        "src/public/assets/obj/*"
      ],
      "@images/*": [
        "src/public/assets/images/*"
      ],
      "@mesh/*": [
        "src/app/Mesh/*"
      ],
      "@materials/*": [
        "src/app/Shared/materials/*"
      ],
      "@boids/*": [
        "src/app/Boids/*"
      ],
      "@public/*": [
        "src/public/*"
      ],
      "@achievements/*": [
        "src/app/Achievements/*"
      ],
      "@ui/*": [
        "src/app/UI/*"
      ],
      "@voice/*": [
        "src/app/Voice/*"
      ],
      "@components/*": [
        "src/public/components/*"
      ],
      "@templates/*": [
        "src/public/templates/*"
      ]
    },
    "typeRoots": [
      "./src/typings/",
      "./node_modules/@types/"
    ],
    "lib": [
      "dom",
      "es2017",
      "es6",
      "es7"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
